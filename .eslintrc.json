{
  "env": {
    "es2021": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-whitespace-before-property": "warn",
    "prettier/prettier": "error",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "indent": [
      "error",
      1
    ],
    "consistent-return": 2,
    "no-constant-condition": 1,
    "no-else-return": 1,
    "no-unused-vars": "warn",
    "no-process-exit": "off",
    "array-element-newline": [
      "error",
      {
        "minItems": 10,
        "multiline": false
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": "always",
        "ObjectPattern": {
          "multiline": true
        },
        "ImportDeclaration": "never",
        "ExportDeclaration": {
          "multiline": true,
          "minProperties": 3
        }
      }
    ]
  }
}
